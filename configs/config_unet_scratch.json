{
  "training":{
    "arch_type": "acdc_sax",
    "n_epochs": 1000,
    "save_epoch_freq": 10,
    "lr_policy": "step",
    "lr_decay_iters": 250,
    "batchSize": 2,
    "preloadData": true
  },
  "visualisation":{
    "display_port": 8012,
    "no_html": true,
    "display_winsize": 256,
    "display_id": 1,
    "display_single_pane_ncols": 0
  },
  "data_path": {
    "acdc_sax": "/vol/biomedic2/oo2113/dataset/tcia_dataset_pancreas_1"
  },
  "augmentation": {
    "acdc_sax": {
      "shift": [0.1,0.1],
      "rotate": 15.0,
      "scale": [0.7,1.3],
      "intensity": [1.0,1.0],
      "random_flip_prob": 0.5,
      "scale_size": [160,160,96],
      "patch_size": [160,160,96]
    }
  },
  "model":{
    "type":"seg",
    "continue_train": false,
    "which_epoch": 0,
    "model_type": "unet_ct_dsv",
    "tensor_dim": "3D",
    "division_factor": 16,
    "input_nc": 1,
    "output_nc": 2,
    "lr_rate": 1e-4,
    "l2_reg_weight": 1e-6,
    "feature_scale": 4,
    "gpu_ids": [0],
    "isTrain": true,
    "checkpoints_dir": "./checkpoints_tcia",
    "experiment_name": "experiment_unet_scratch",
    "criterion": "dice_loss"
  }
}


